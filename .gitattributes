# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.py text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.sql text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.css text eol=lf
*.html text eol=lf
*.xml text eol=lf
*.dockerfile text eol=lf
Dockerfile text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.whl binary
*.so binary
*.dylib binary
*.dll binary
*.exe binary

# Python wheel files
*.whl binary

# Lock files should use LF
uv.lock text eol=lf
package-lock.json text eol=lf
yarn.lock text eol=lf
